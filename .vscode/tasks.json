{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Wattle tests",
            "type": "shell",
            "command": "node",
            "args": [
                "./lib/cmd.js",
                "./tests/*"
            ],
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                {
                    "owner": "wattle",
                    "source": "wattle",
                    "fileLocation": [
                        "relative",
                        "${workspaceFolder}"
                    ],
                    "pattern": [
                        {
                            "regexp": "âœ—"
                        },
                        {
                            "regexp": "\\s(.*):(\\d+)  (.*)",
                            "file": 1,
                            "line": 2,
                            "message": 3
                        }
                    ]
                },
                {
                    "owner": "typescript",
                    "source": "ts",
                    "applyTo": "closedDocuments",
                    "fileLocation": "relative",
                    "pattern": [{
                        "regexp": "TSError:"
                    }, {
                        "regexp": "(.*) \\((\\d+,\\d+)\\): (.*) \\(\\d+\\)$",
                        "file": 1,
                        "location": 2,
                        "message": 3,
                        "loop": true
                    }]
                }
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Watch TypeScript",
            "type": "npm",
            "script": "watch",
            "isBackground": true,
            "problemMatcher": "$tsc-watch"
        },
    ]
}
