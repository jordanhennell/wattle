{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run tests",
            "program": "${workspaceFolder}/node_modules/wattle/lib/cmd.js",
            "console": "integratedTerminal",
            "autoAttachChildProcesses": true,
            "args": [ // Use the same command line arguments as the normal wattle command
                "${relativeFile}" // Useful for running tests in the current file
            ]
        }
    ]
}